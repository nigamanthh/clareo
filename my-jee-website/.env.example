# ==========================================
# FRONTEND Environment Variables (.env)
# ==========================================
# Place this file in: my-jee-website/.env

# Backend Server URL (Update this after deploying backend)
# For local development: http://localhost:3000
# For production: https://clario-backend-804a.onrender.com
VITE_BACKEND_URL=https://clario-backend-804a.onrender.com


# ==========================================
# BACKEND Environment Variables (server/.env)
# ==========================================
# Place this file in: my-jee-website/server/.env

# Gemini AI API Key (Get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# D-ID API Key (Get from https://studio.d-id.com/)
DID_API_KEY=your_did_api_key_here

# Frontend URL (for CORS - your Netlify URL)
FRONTEND_URL=https://your-site.netlify.app

# Port (Render will set this automatically)
PORT=3000
